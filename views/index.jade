    for file in files
      li
        label(for=file)
          input(type="checkbox", value=file, id=file)
          = file
    li
      label(for="minify")
        input(type="checkbox", value="minify", id="minify")
        strong Minify
    div#output
      br
      input(type="button", value="get URL")
      input(type="textbox")
      br
      h3 Sample Response:
      br
      textarea(readonly="true")